# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                            controllers.BaseController.index

#GET         /dashboard                controllers.BaseController.dashboard

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)

GET         /webjars/*file               controllers.WebJarAssets.at(file)


GET         /chat                        controllers.IrcWebController.chat
GET         /ircChat                     controllers.IrcWebController.ircChat

# ReactJs Example
GET         /react                       controllers.ReactJsController.react(reactRoute = "")
GET         /react/                      controllers.ReactJsController.react(reactRoute = "/")
GET         /react/*reactRoute           controllers.ReactJsController.react(reactRoute : String)

# Home page
# GET     /demo/                           controllers.Assets.at(path="/public", file="index2.html")
GET         /demo/                       controllers.SecurityController.index2

POST        /demo/login                  controllers.SecurityController.login
POST        /demo/logout                 controllers.SecurityController.logout

GET         /demo/todos                  controllers.TodoController.getAllTodos
POST        /demo/todos                  controllers.TodoController.createTodo

# GET     /assets/*file               controllers.Assets.at(path="/public", file)

## SecureSocial
# Home page
GET         /secsoc/                     @controllers.Application.index
GET         /secsoc/only-twitter         @controllers.Application.onlyTwitter
GET         /secsoc/link-result          @controllers.Application.linkResult
GET         /secsoc/current-user         @controllers.Application.currentUser
GET         /secsoc/custom/login         @controllers.CustomLoginController.login
GET         /secsoc/custom/logout        @controllers.CustomLoginController.logout

# Map static resources from the /public folder to the /assets URL path
# GET        /assets/*file        controllers.Assets.at(path="/public", file)
->          /secsoc/auth                 securesocial.Routes
