# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.BaseController.index

GET         /dashboard               controllers.BaseController.dashboard

# Users list (look at the default values for pagination parameters)
GET         /users                   controllers.UserController.list

# Add user
POST        /users/save              controllers.UserController.save

# Edit existing user
GET         /users/:id               controllers.UserController.edit(id:Long)
POST        /users/:id               controllers.UserController.update(id:Long)

# Delete a computer
POST        /users/:id/delete        controllers.UserController.delete(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)

GET         /webjars/*file           controllers.WebJarAssets.at(file)


GET         /chat                    controllers.IrcWebController.chat
GET         /ircChat                 controllers.IrcWebController.ircChat

# ReactJs Example
GET         /react                   controllers.ReactJsController.react
